<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_holiday_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_holidays_of_month_view"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/holidays_of_month_name2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/ibmplexsanskr_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="20dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/holidays_of_month_date2"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/ibmplexsanskr_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:layout_weight="2" />

</LinearLayout>